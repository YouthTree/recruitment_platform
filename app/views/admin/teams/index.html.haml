%h2.title Viewing all Teams

= will_paginate collection

%table
  %thead
    %tr
      %th Name
      %th Website URL
      %th &nbsp;
  %tbody
    - collection.each do |r|
      %tr{:class => cycle('odd', 'even')}
        %td= link_to r.name, [:admin, r]
        %td= link_to r.website_url, r.website_url
        %td.actions= individual_resource_links r
    = empty_row_for_collection 2

= will_paginate collection