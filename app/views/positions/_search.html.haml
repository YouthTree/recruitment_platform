= semantic_form_for @search, :url => root_url, :method => :get do |form|

  = form.inputs "Filter positions by..." do

    = form.input :query, :label => 'Search for', :as => :string
    = form.input :team_ids, :label => 'On teams', :as => :check_boxes, :collection => Team.all


  = form.buttons do
    = form.commit_button 'Filter positions'