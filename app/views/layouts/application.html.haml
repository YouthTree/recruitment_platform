!!!
- ie_html :lang => 'en', :class => 'no-js' do

  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    = meta_content :keywords
    = meta_content :description
    %title= page_title
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %link{:rel => 'image_src', :href => '/images/useful/facebook-logo.png'}
    = javascript_include_tag 'vendor/modernizr'
    %link{:type => "text/css", :href => "http://fonts.googleapis.com/css?family=Enriqueta:400,700", :rel => 'stylesheet'}
    %link{:type => "text/css", :href => "http://fonts.googleapis.com/css?family=Terminal+Dosis:400,700", :rel => 'stylesheet'}
    = include_stylesheets(:base, :media => 'screen, projection')
    = include_stylesheets(:base_print, :media => 'print')
    = csrf_meta_tag
    = extra_head_content
  %body
    = from_radiant :network
    %header#page-header= from_radiant :header
    #container
      = flash_messages :alert, :notice
      %section#content= yield
      / JS at the bottom for speedy load times
      = include_javascripts :base
      /[if IE 6]
        = include_javascripts :ie6
      = extra_footer_content
      = clicky_analytics