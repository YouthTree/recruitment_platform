!!!
- ie_html :lang => 'en', :class => 'no-js' do

  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %title= page_title
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    = javascript_include_tag 'vendor/modernizr'
    = stylesheet_link_tag :all
    -#= include_stylesheets(:base, :media => 'screen, projection')
    = csrf_meta_tag
    = extra_head_content

  %body
    #container
      %header#page-header= partial 'shared/header'
      = flash_messages :alert, :notice
      %section#content= yield
      %header#page-footer= partial 'shared/footer'
      / JS at the bottom for speedy load times
      = include_javascripts :base
      = extra_footer_content